{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend server for multiplayer chess game",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/graphql": "^14.5.0",
    "@types/helmet": "^0.0.48",
    "@types/node": "^8.0.29",
    "@types/uuid": "^8.3.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "apollo-server-express": "^2.25.2",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "helmet": "^8.1.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.20",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start2": "node dist/index.js",
    "start": "ts-node-dev --respawn src/index.ts",
    "dev": "nodemon --watch src --ext ts --exec \"node -r ts-node/register src/index.ts\"",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "build": "tsc",
    "watch": "tsc -w",
    "typeorm:migration:gen": "ts-node ./node_modules/typeorm/cli.js migration:generate --name",
    "typeorm:migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
